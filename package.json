{
  "name": "soon",
  "productName": "Soon",
  "version": "1.0.2",
  "description": "A simplistic reminder application for macOS menubar to quickly add small post-it like reminders.",
  "main": "src/server/main.js",
  "author": "Dogacan Bilgili",
  "license": "GNU",
  "scripts": {
    "server": "electron .",
    "client": "NODE_ENV=development webpack serve --mode development",
    "build": "NODE_ENV=production webpack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@svgr/webpack": "^5.5.0",
    "@tippyjs/react": "^4.2.6",
    "classnames": "^2.3.1",
    "electron-store": "^8.0.1",
    "electron-util": "^0.17.2",
    "nseventmonitor": "^1.0.0",
    "prop-types": "^15.8.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "tippy.js": "^6.3.7",
    "url-polyfill": "^1.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "css-loader": "^6.5.1",
    "electron": "^13.6.9",
    "electron-builder": "^23.0.2",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "path-browserify": "^1.0.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.87.0",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "url": "^0.11.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2"
  },
  "build": {
    "mac": {
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert"
      }
    },
    "files": [
      "**/*",
      "build"
    ],
    "dmg": {
      "title": "${productName}",
      "icon": "disk.icns"
    }
  }
}
