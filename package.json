{
  "name": "soon",
  "productName": "Soon",
  "version": "2.1.0",
  "description": "A simplistic reminder application for macOS menubar to quickly add small post-it like reminders.",
  "main": "src/server/main.js",
  "author": "Dogacan Bilgili",
  "license": "GNU",
  "type": "module",
  "engines": {
    "node": ">=20.11.1"
  },
  "scripts": {
    "server": "NODE_ENV=development electron .",
    "client": "NODE_ENV=development webpack serve --mode development",
    "build": "NODE_ENV=production webpack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tippyjs/react": "^4.2.6",
    "classnames": "^2.5.1",
    "electron-store": "^8.2.0",
    "electron-util": "^0.18.0",
    "nseventmonitor": "^1.0.5",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tippy.js": "^6.3.7",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.36.1",
    "fs-extra": "^11.3.0",
    "html-webpack-plugin": "^5.6.0",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "style-loader": "^4.0.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "build": {
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert"
      }
    },
    "files": [
      "**/*",
      "build"
    ],
    "dmg": {
      "title": "${productName}",
      "icon": "build/icon.icns",
      "format": "UDBZ",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200
        },
        {
          "x": 380,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "output": "dist"
    }
  }
}
